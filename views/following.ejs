<!DOCTYPE html>
<html>
<head>
  <title>Following - <%= user.name %></title>
  <style>
    body { font-family: sans-serif; margin: 0; }
    header { background: #333; color: #fff; padding: 10px 20px; display: flex; align-items: center; }
    header a { color: #fff; margin-right: 20px; text-decoration: none; }
    .dropdown { position: relative; display: inline-block; }
    .dropdown-content {
      display: none; position: absolute; background: #fff; min-width: 120px; box-shadow: 0 8px 16px rgba(0,0,0,0.2);
      z-index: 1; right: 0;
    }
    .dropdown-content a { color: #333; padding: 10px 16px; text-decoration: none; display: block; }
    .dropdown-content a:hover { background: #eee; }
    .dropdown:hover .dropdown-content { display: block; }
    .container { display: flex; margin: 20px; }
    .left { width: 300px; margin-right: 40px; }
    .right { flex: 1; }
    .profile-img { width: 100px; height: 100px; border-radius: 50%; object-fit: cover; display: block; margin-bottom: 10px; }
    .stats { margin: 10px 0; }
    .stats a { margin-right: 10px; }
    .user-list { margin-top: 20px; }
    .user-list-item { padding: 10px 0; border-bottom: 1px solid #eee; }
  </style>
</head>
<body>
  <%- include('headers', { loginUser: loginUser }) %>
  <div class="container">
    <!-- 左カラム -->
    <div class="left">
      <a href="/users/<%= user.id %>">
        <img src="<%= user.profileImage || '/images/default-profile.png' %>" alt="profile" class="profile-img">
      </a>
      <div><strong><%= user.name %></strong></div>
      <div><a href="/users/<%= user.id %>">view my profile</a></div>
      <div class="stats">
        <div>投稿数: <%= user.postCount %></div>
        <div>
          <a href="/users/<%= user.id %>/following">フォロー: <%= user.followingCount %></a>
          <a href="/users/<%= user.id %>/followers">フォロワー: <%= user.followerCount %></a>
        </div>
      </div>
    </div>
    <!-- 右カラム -->
    <div class="right">
      <h2>Following</h2>
      <div class="user-list">
        <% if (followingUsers.length === 0) { %>
          <div>フォローしているユーザはいません。</div>
        <% } %>
        <% followingUsers.forEach(function(fu) { %>
          <div class="user-list-item">
            <a href="/users/<%= fu.id %>"><%= fu.name %></a>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</body>
</html>